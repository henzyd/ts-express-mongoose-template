{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "declaration": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    // "noUnusedParameters": true,
    "noUnusedLocals": true
  },
  "ts-node": {
    "files": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
